<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/conversationItem_contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        />

    <LinearLayout
        android:id="@+id/conversationItem_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/conversationItem_contactName">

        <TextView
            android:id="@+id/conversationItem_lastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            />

        <TextView
            android:id="@+id/conversationItem_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:gravity="right"
            />


    </LinearLayout>

    <View
        android:layout_below="@+id/conversationItem_linearLayout"
        android:paddingBottom="5dp"
        style="@style/Line"/>


</RelativeLayout>